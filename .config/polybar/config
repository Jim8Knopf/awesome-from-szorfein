[colors]
background = 272427
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color14}
primary = ${xrdb:color4}
secondary = ${xrdb:color6}
alert = #d75f87

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
