[module/uptime]
type = custom/script
exec = uptime|awk '{print $2 " " $3 " " $4 " " $5 " " $6}'|cut -d ',' -f -2
interval = 6
format-prefix = " "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-padding = 1

[module/netstat]
type = internal/network
interface = wlp2s0
interval = 3.0
label-connected = %{F#ff0000} %{F-}%upspeed% %{F#00ff00} %{F-}%downspeed%

[module/rldTor]
type = custom/text
content = "reload tor "
content-suffix = ^
content-suffix-foreground = #ffffff
content-foreground = ${colors.primary}
content-padding = 0
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart tor
click-left = "sudo systemctl restart tor"

[module/rldDns]
type = custom/text
content = "reload dnscrypt "
content-suffix = ^
content-suffix-foreground = #ffffff
content-foreground = ${colors.secondary}
content-padding = 1
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart dnscrypt-proxy
click-left = "sudo systemctl restart dnscrypt-proxy"

[module/hostname]
type = custom/script
interval = 256
format = "<label> "
"format-prefix = "  "
format-prefix = " ƸӜƷ "
format-prefix-foreground = ${colors.secondary}
format-padding = 0
exec = echo "$(uname -n)"

[module/ip]
type = custom/script
interval = 2
format = "<label>"
format-prefix = "ip: "
format-prefix-foreground = ${colors.primary}
format-padding = 1
exec = echo "$(wget -qO- https://canihazip.com/s | sed -e 's/[^[:digit:]\|.]//g')"
exec-if = ping -c 1 gentoo.org

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...%"
label-foreground = ${colors.foreground}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
format-online =  <icon-prev> <toggle> <icon-next>

icon-prev = 
icon-play = 
icon-pause = 
icon-next =  

toggle-on-foreground = ${colors.primary}
toggle-off-foreground = ${colors.secondary}
label-offline = no sound

label-song-maxlen = 25
label-song-ellipsis = true

[module/mail]
type = custom/script
; 600 = 10min
interval = 600
format = <label>
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.primary}
exec = ~/.config/polybar/mails

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem: "
format-prefix-foreground = ${colors.secondary}
label = %percentage_used%%
format-padding = 1

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-padding = 0
label-connected = %essid% - %{F#aca074}%signal%%%{F-}
format-connected-prefix = "wlan0: "
format-connected-prefix-foreground = ${colors.secondary}
format-disconnected = "wlan: off"
format-disconnected-foreground = ${colors.primary}
format-disconnected-padding = 0
label-disconnected-foreground = ${colors.secondary}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp1s0f2
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "eth: "
format-connected-prefix-foreground = ${colors.secondary}
label-connected = "on"
format-disconnected = "eth off"
format-disconnected-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 5
date = " %a %d %b "
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M
label = %date% %time%
format-prefix = "____["
format-prefix-foreground = ${colors.primary}
format-suffix = " ]____"
format-suffix-foreground = ${colors.primary}

[module/volume]
type = custom/script
interval = 2
format = "<label> "
format-prefix = "vol: "
format-padding = 0
format-prefix-foreground = ${colors.secondary}
exec = echo "$(mpc volume | awk '{print $2}')"

[module/battery]
type = internal/battery
